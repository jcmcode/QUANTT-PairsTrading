{
  "name": "quantt-dashboard",
  "version": "0.1.0",
  "description": "Interactive dashboard for QUANTT pairs trading strategy",
  "main": "public/main.js",
  "homepage": "./",
  "author": "QUANTT Team",
  "license": "MIT",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build": "npm run react-build && electron-builder",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-dev\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.quantt.dashboard",
    "productName": "QUANTT Dashboard",
    "files": [
      "public/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
